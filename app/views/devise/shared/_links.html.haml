- if controller_name != 'sessions' and session[:omniauth].nil?
  = link_to t('.sign_in'), authentications_path
  %br
- if devise_mapping.registerable? && controller_name != 'registrations' and session[:omniauth].nil?
  = link_to t('.sign_up'), new_registration_path(resource_name)
  %br
- if devise_mapping.recoverable? && controller_name != 'passwords'
  = link_to t('.forgot_password'), new_password_path(resource_name)
  %br
- if devise_mapping.confirmable? && controller_name != 'confirmations'
  = link_to t('.confirmation'), new_confirmation_path(resource_name)
  %br
- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks'
  = link_to t('.instruction'), new_unlock_path(resource_name)
  %br
- if devise_mapping.omniauthable?
  - resource_class.omniauth_providers.each do |provider|
    = link_to t('.sign_in_with',:name=>provider.to_s.titleize), omniauth_authorize_path(resource_name, provider)
    %br
