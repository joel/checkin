%section#forms
  %div.page-header
    %h1= t('users.create.title')
  %div{:class => "row" }
    %div{:class => "span4 columns" }
      %h2= t('users.edit.title_box')
      %p= t('users.edit.p_box')
    %div{:class => "span11 columns" }
      = simple_form_for(resource,:as=>resource_name,:url=>registration_path(resource_name),:validate=>true,:class=>"form-stacked") do |f|
        = devise_error_messages!
        = f.input :gender, :collection => %w( Mr Mlle Mme ), :include_blank => false
        = f.input :email
        = f.input :username
        = f.input :firstname
        = f.input :lastname
        = f.input :company
        = f.input :phone
        = f.input :twitter
        - if @user.password_required?
          = f.input :password
          = f.input :password_confirmation
        %div{:class => "actions"}
          %button{:class => "btn primary",:id => :new_registration_submit}= t('helpers.submit.user.create')
    %div{:class => "clearfix span15 columns"}
      = render :partial => "devise/shared/links"
